    <script>
        function toggleFaq(num) {
            const faq = document.getElementById('faq' + num);
            if (faq.style.display === 'none' || faq.style.display === '') {
                faq.style.display = 'block';
            } else {
                faq.style.display = 'none';
            }
        }

        function scrollToForm() {
            document.getElementById('orderForm').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        function submitOrder(event) {
            event.preventDefault();
            alert('Grazie per il tuo ordine! Sarai contattato da un nostro operatore entro 24 ore.');
        }
    </script>
